<%- include("partials/header") %>

<div class="login-container">
  <div class="login-box">
    <h2>Welcome</h2>
    <p class="login-subtitle">Login</p>

    <% if (error) { %>
      <p class="login-error"><%= error %></p>
    <% } %>

    <form action="/login" method="POST">
      <div class="input-box">
        <label for="email">Email</label>
        <input id="email" type="email" name="email" class="input-field" required>
      </div>

      <div class="input-box">
        <label for="password">Password</label>
        <input id="password" type="password" name="password" class="input-field" required>
      </div>

      <div class="input-submit">
        <button type="submit" class="submit_knapp">Sign In</button>
      </div>
    </form>

    <div class="sign-up-link">
      <p>Dont have an account? <a href="/signup">Sign Up</a></p>
    </div>
  </div>
</div>

<%- include("partials/footer") %>
