<%- include("partials/header") %>

<div class="login-container">
  <div class="login-box">
    <h2>Create Account</h2>
    <p class="login-subtitle">Sign Up</p>

    <% if (error) { %>
      <p class="login-error"><%= error %></p>
    <% } %>

    <form action="/signup" method="POST">
      <div class="input-box">
        <label for="email">Email</label>
        <input id="email" type="email" name="email" class="input-field" required>
      </div>

      <div class="input-box">
        <label for="username">Username</label>
        <input id="username" type="text" name="username" class="input-field" required>
      </div>

      <div class="input-box">
        <label for="password">Password</label>
        <input id="password" type="password" name="password" class="input-field" required>
      </div>

      <div class="input-box">
        <label>Choose your avatar:</label>
        <div class="avatars">
          <label>
            <input type="radio" name="avatar" value="avatar1.png" required>
            <img src="/images/avatars/avatar1.png" alt="Avatar 1">
          </label>
          <label>
            <input type="radio" name="avatar" value="avatar2.png">
            <img src="/images/avatars/avatar2.png" alt="Avatar 2">
          </label>
          <label>
            <input type="radio" name="avatar" value="avatar3.png">
            <img src="/images/avatars/avatar3.png" alt="Avatar 3">
          </label>
        </div>
      </div>

      <div class="input-submit">
        <button type="submit" class="submit_knapp">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<%- include("partials/footer") %>
